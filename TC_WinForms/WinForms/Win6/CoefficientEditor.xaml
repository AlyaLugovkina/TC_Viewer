<UserControl x:Class="TC_WinForms.WinForms.CoefficientEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TC_WinForms.WinForms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DataGrid x:Name="CoefficientDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  MinHeight="100">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="50"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                <DataGridTextColumn Header="Short Name" Binding="{Binding ShortName}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add Row" HorizontalAlignment="Center" Margin="10"
                Click="AddRowButton_Click"/>
    </StackPanel>
</UserControl>
