<UserControl x:Class="TC_WinForms.WinForms.Win6.ImageEditor.ImageOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TC_WinForms.WinForms.Win6.ImageEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  x:Name="ImageDataGrid"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ImageItems}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Выбрать" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Изображение"
                                    Binding="{Binding Owner}"
                                    CanUserSort="False"
                                    Width="*"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Image x:Name="ImageHolder" Height="300" Width="300" Margin="0,20,0,0"
                   Stretch="Uniform"/>
            <TextBlock x:Name="ImageNumber" FontSize="11" Margin="0,10,0,0" 
                       TextAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock x:Name="ImageName" Margin="0,5,0,0" 
                       TextAlignment="Center" TextWrapping="Wrap" FontWeight="Bold"/>
        </StackPanel>

        <TextBlock x:Name ="lblTcName" HorizontalAlignment="Left" Margin="10,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name ="btnAddImage" Click="BtnAddImage_Click"  Content="Добавить изображение" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" Width="140" Height="28"/>
        <Button x:Name ="btnEditImage" Click="BtnEditImage_Click" Content="Редактировать изображение" HorizontalAlignment="Left" Margin="317,0,0,0" VerticalAlignment="Center" Width="173" Height="28" Grid.Column="1"/>
        <Button x:Name ="btnDeleteImage" Content="Удалить изображение" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Height="28" Grid.Column="1" Margin="166,0,0,0" Click="BtnDeleteImage_Click"/>

    </Grid>
</UserControl>
